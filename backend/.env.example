# Backend Environment Variables Configuration
# Copy this file to .env and fill in the actual values

# Application
NODE_ENV=production
PORT=3001

# Database
MONGODB_URI=mongodb://localhost:27017/greenlight

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
BOT_TOKEN=your_telegram_bot_token

# CryptoPay API
CRYPTO_PAY_API_TOKEN=your_cryptobot_api_token

# Admin API Token
ADMIN_API_TOKEN=your_admin_api_token_here

# Security
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=INFO

# Rate Limiting (Optional overrides)
RATE_LIMIT_GENERAL_MAX=100
RATE_LIMIT_BETTING_MAX=10
RATE_LIMIT_AUTH_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=https://greenlight-frontend.onrender.com

# Health Check
HEALTH_CHECK_SECRET=your_health_check_secret

# Financial Limits
MIN_BET_AMOUNT=0.01
MAX_BET_AMOUNT=10000
MIN_WITHDRAWAL_AMOUNT=1
MAX_WITHDRAWAL_AMOUNT=10000

# Game Configuration
CRASH_HOUSE_EDGE=5
MINES_HOUSE_EDGE=5
COIN_HOUSE_EDGE=5
SLOTS_HOUSE_EDGE=20

# WebSocket
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=60000